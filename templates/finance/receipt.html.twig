</head>
<body onload="window.print()">
  <div class="page">
    <header>
      <img src="{{ absolute_url(asset('assets/img/logo.png')) }}" alt="OFSET Consult" class="logo">
      <div class="title-box">
        <h1>REÇU DE TRANSACTION</h1>
        <div><strong>Transaction #</strong> {{ transaction.id }}</div>
        <div><strong>Date :</strong> {{ transaction.createdAt|date('d / m / Y') }}</div>
      </div>
    </header>
    <div class="content">
      <dl class="row">
        <dt>Type de compte</dt>
        <dd>
          {% if transaction.accountType == 'supplier' %}
            Approvisionnement
          {% else %}
            Dépense
          {% endif %}
        </dd> 

        <dt>Entrée</dt>
        <dd>{{ transaction.income|number_format(0, ',', ' ') }} F CFA</dd>

        <dt>Sortie</dt>
        <dd>{{ transaction.outcome|number_format(0, ',', ' ') }} F CFA</dd>

        <dt>Solde</dt>
        <dd>{{ transaction.balanceValue|number_format(0, ',', ' ') }} F CFA</dd>

        <dt>Mode de paiement</dt>
        <dd>{{ transaction.paymentMethod }}</dd>

        <dt>Référence paie-ment</dt>
        <dd>{{ transaction.paymentRef }}</dd>

        <dt>Libellé</dt>
        <dd>{{ transaction.describ }}</dd>

        <dt>Motif</dt>
        <dd>{{ transaction.reason ?: '—' }}</dd>
      </dl>
    </div>
    <footer>
